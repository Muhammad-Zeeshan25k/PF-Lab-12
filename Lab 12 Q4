#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    printf("Enter the size of the array to be dynamically alocated :");
    scanf("%d",&n);
    int *ptr = (int*)calloc(n,sizeof(int));
    for(int i=0;i<n;i++){
        printf("%d\n",*(ptr+i));
    }
    for(int i=0;i<n;i++){
        scanf("%d",(ptr+i));
    }
    free(ptr);
    ptr=(int*)malloc(n*sizeof(int));
    for(int i=0;i<n;i++){
        printf("%d\n",*(ptr+i));
    }
    free(ptr);
    return 0;
}
