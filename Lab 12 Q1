#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    printf("Enter the size of the Array to be dynamically allocated :");
    scanf("%d",&n);
    int *ptr = malloc(n*sizeof(int));
    for(int i=0;i<n;i++){
        printf("Enter the element at Index %d :",(i+1));
        scanf("%d",(ptr+i));
    }
    for(int i=0;i<n;i++){
        printf("The value at Index %d :%d\n",(i+1),*(ptr+i));
    }
    free(ptr);
    return 0;
}
