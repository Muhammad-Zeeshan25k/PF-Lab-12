#include <stdio.h>
#include <string.h>

void palindrome(char arr[],int i,int n){
    if (arr[i] != arr[n - i - 1] && arr[i] != arr[n - i - 1] + 32 && arr[i] != arr[n - i - 1] - 32){
        printf("String is not a palindrome");
        return;
    }
    if(i>=(n/2)){
        printf("The String is a palindrome.");
        return;
    }
    else {
        palindrome(arr,i+1,n);
    }
}

int main() {
    char arr[100];
    int i=0,n;
    printf("Enter the String :");
    fgets(arr,sizeof(arr),stdin);
    arr[strcspn(arr,"\n")]='\0';
    n=strlen(arr);
    palindrome(arr,i,n);

    return 0;
}
