#include <stdio.h>
#include <stdlib.h>

int main() {
    char *str = NULL; 
    int ch;
    size_t len = 0;

    printf("Enter a string: ");

    while ((ch = getchar()) != '\n' && ch != EOF) {
        char *temp = realloc(str, len + 2);
        str = temp;
        str[len++] = (char)ch;
        str[len] = '\0';
    }
    printf("Stored string: %s\n", str);

    free(str);
    return 0;
}
